
@{
    ViewBag.Title = "CreateOrder";
}

<h2>CreateOrder</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Книга", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 cont-book">
            @Html.DropDownList("BookId", ViewBag.Books as SelectList)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Заказчик", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CardId", ViewBag.Readers as SelectList)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Додати" class="btn btn-default" />
        </div>
    </div>
}