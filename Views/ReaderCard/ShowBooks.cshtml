@model IEnumerable<Library.Models.Record>

@{
    ViewBag.Title = "ShowBooks";
    int count = 0;

}

<h2>Замовлені книги</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RecordPublisher.PublisherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecordName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecordDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfPages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdditionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Annotation)
        </th>
        <th>
            Количество
        </th>
        <th>

        </th>
    </tr>


@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RecordPublisher.PublisherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecordName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecordDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfPages)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdditionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Annotation)
        </td>
        <td>
            @ViewBag.amounts[count]
        </td>
        <td>
            @Html.ActionLink("Сдано", "Passed", new { id = item.RecordId })
        </td>
    </tr>
    count++;
}

</table>
